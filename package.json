{
  "name": "node-jest",
  "version": "1.0.0",
  "main": "src/app.js",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --fix \"src/**/*.{js,ts}\"",
    "format": "prettier --write \"src/**/*.{js,ts}\"",
    "start": "NODE_OPTIONS=--max_old_space_size=4096 NODE_ENV=development node src/app.js",
    "test": "NODE_OPTIONS=--max_old_space_size=4096 NODE_ENV=test jest --detectOpenHandles --verbose",
    "test:silent": "NODE_OPTIONS=--max_old_space_size=4096 NODE_ENV=test jest --verbose --silent"
  },
  "dependencies": {},
  "devDependencies": {
    "eslint": "^8.22.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^29.0.1",
    "prettier": "^2.7.1"
  }
}
